<pretty-config xmlns="http://ocpsoft.org/schema/rewrite-config-prettyfaces" 
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
               xsi:schemaLocation="http://ocpsoft.org/schema/rewrite-config-prettyfaces
                      http://ocpsoft.org/xml/ns/prettyfaces/rewrite-config-prettyfaces.xsd">

    <url-mapping id="login">
        <pattern value="/login" />
        <view-id value="/index.xhtml" />
    </url-mapping>
    
    <url-mapping id="home">
        <pattern value="/user/home" />
        <view-id value="/user/home.xhtml" />
    </url-mapping>
    
    <url-mapping id="setting">
        <pattern value="/user/setting" />
        <view-id value="/user/setting.xhtml" />
    </url-mapping>
    
     <url-mapping id="error">
        <pattern value="/error" />
        <view-id value="/error.xhtml" />
    </url-mapping>   
    
    <url-mapping id="view">
        <pattern value="/user/view" />
        <view-id value="/user/view.xhtml" />
    </url-mapping>   
</pretty-config>